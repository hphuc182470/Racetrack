<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B6DDDA">

    <LinearLayout
        android:id="@+id/main"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="186dp"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:text="🏁 Horse Racing Championship 🏁"
            android:textColor="#F23034"
            android:textSize="40sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/race_track_background"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_marginBottom="40dp"
            android:elevation="4dp"
            android:translationZ="4dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🐴 Horse 1"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:layout_marginEnd="12dp"
                    tools:ignore="HardcodedText" />

                <SeekBar
                    android:id="@+id/seekBar1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="0"
                    android:thumb="@drawable/horse_thumb"
                    android:progressTint="#FFC107"
                    android:minHeight="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">
                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🐴 Horse 2"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:layout_marginEnd="12dp"
                    tools:ignore="HardcodedText" />
                <SeekBar
                    android:id="@+id/seekBar2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="0"
                    android:thumb="@drawable/horse_thumb" android:progressTint="#EF9A9A"
                    android:minHeight="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">
                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🐴 Horse 3"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:layout_marginEnd="12dp"
                    tools:ignore="HardcodedText" />
                <SeekBar
                    android:id="@+id/seekBar3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="0"
                    android:thumb="@drawable/horse_thumb"
                    android:progressTint="#90CAF9"
                    android:minHeight="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">
                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🐴 Horse 4"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:layout_marginEnd="12dp"
                    tools:ignore="HardcodedText" />
                <SeekBar
                    android:id="@+id/seekBar4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="0"
                    android:thumb="@drawable/horse_thumb"
                    android:progressTint="#CE93D8"
                    android:minHeight="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">
                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🐴 Horse 5"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:layout_marginEnd="12dp"
                    tools:ignore="HardcodedText" />
                <SeekBar
                    android:id="@+id/seekBar5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="0"
                    android:thumb="@drawable/horse_thumb"
                    android:progressTint="#CE93D8"
                    android:minHeight="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🐴 Horse 6"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:layout_marginEnd="12dp"
                    tools:ignore="HardcodedText" />
                <SeekBar
                    android:id="@+id/seekBar6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="0"
                    android:thumb="@drawable/horse_thumb"
                    android:progressTint="#FFAB91"
                    android:minHeight="10dp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🏇 Start Race!"
            android:textAllCaps="false"
            android:textColor="#1B5E20"
            android:textSize="20sp"
            android:backgroundTint="#FFEB3B"
            android:layout_marginBottom="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:stateListAnimator="@null"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/noti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ready to race!"
            android:textColor="#E91E63"
            android:textSize="22sp"
            android:gravity="center"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</ScrollView>