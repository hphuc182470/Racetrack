<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/casino_background">

    <LinearLayout
        android:id="@+id/main"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="24dp">        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"            android:text="🏁 Horse Racing Championship 🏁"
            android:textColor="#333333"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:id="@+id/authLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:padding="16dp"
            android:background="@drawable/rounded_corner_text_bg"
            android:elevation="2dp">            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:inputType="text"
                android:layout_marginBottom="8dp"
                android:background="@drawable/casino_edittext_bg"
                android:textColor="@color/casino_text_primary"
                android:textColorHint="@color/casino_text_secondary"
                android:padding="12dp"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:layout_marginBottom="16dp"
                android:background="@drawable/casino_edittext_bg"
                android:textColor="@color/casino_text_primary"
                android:textColorHint="@color/casino_text_secondary"
                android:padding="12dp"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Login"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/casino_button_bg"
                    android:textColor="@color/casino_text_primary"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Register"
                    android:background="@drawable/casino_button_bg"
                    android:textColor="@color/casino_text_primary"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
            </LinearLayout>            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:visibility="gone"
                android:background="@drawable/casino_button_bg"
                android:textColor="@color/casino_red"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

        </LinearLayout><TextView
            android:id="@+id/tvCurrentUserStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"            android:gravity="center"
            android:text="Not logged in"
            android:textSize="18sp"
            android:textColor="#B8860B"
            android:layout_marginBottom="20dp"
            tools:ignore="HardcodedText" />


        <LinearLayout
            android:id="@+id/raceTrackLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/race_track_background"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_marginBottom="40dp"
            android:elevation="4dp"
            android:translationZ="4dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"                    android:text="🐴 Horse 1"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:layout_marginEnd="12dp"
                    tools:ignore="HardcodedText" />

                <SeekBar
                    android:id="@+id/seekBar1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="0"
                    android:thumb="@drawable/horse_thumb"
                    android:progressTint="#FFC107"
                    android:minHeight="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">
                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"                    android:text="🐴 Horse 2"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:layout_marginEnd="12dp"
                    tools:ignore="HardcodedText" />
                <SeekBar
                    android:id="@+id/seekBar2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="0"
                    android:thumb="@drawable/horse_thumb" android:progressTint="#EF9A9A"
                    android:minHeight="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🐴 Horse 3"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:layout_marginEnd="12dp"
                    tools:ignore="HardcodedText" />
                <SeekBar
                    android:id="@+id/seekBar3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="0"
                    android:thumb="@drawable/horse_thumb"
                    android:progressTint="#90CAF9"
                    android:minHeight="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🐴 Horse 4"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:layout_marginEnd="12dp"
                    tools:ignore="HardcodedText" />
                <SeekBar
                    android:id="@+id/seekBar4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="0"
                    android:thumb="@drawable/horse_thumb"
                    android:progressTint="#CE93D8"
                    android:minHeight="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🐴 Horse 5"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:layout_marginEnd="12dp"
                    tools:ignore="HardcodedText" />
                <SeekBar
                    android:id="@+id/seekBar5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="0"
                    android:thumb="@drawable/horse_thumb"
                    android:progressTint="#A5D6A7"
                    android:minHeight="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🐴 Horse 6"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:layout_marginEnd="12dp"
                    tools:ignore="HardcodedText" />
                <SeekBar
                    android:id="@+id/seekBar6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="0"
                    android:thumb="@drawable/horse_thumb"
                    android:progressTint="#FFAB91"
                    android:minHeight="10dp" />
            </LinearLayout>
        </LinearLayout>        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🏇 Start Race!"
            android:textAllCaps="false"            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:backgroundTint="#FF4444"
            android:layout_marginBottom="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:stateListAnimator="@null"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnLogoutRacing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🚪 Logout"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:backgroundTint="#666666"
            android:layout_marginBottom="24dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:stateListAnimator="@null"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/noti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"            android:text="Ready to race!"
            android:textColor="#FFD700"
            android:textSize="22sp"
            android:gravity="center"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</ScrollView>